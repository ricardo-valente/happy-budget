{{# if success }}
  <section>
    <h2>Successful Validation!</h2>
  </section>
{{ else }}
  {{# if errors }}
    <section class="errors">
      <ul>
        {{# each errors }}
          <li>{{ this.msg }}</li>
        {{/each}}
      </ul>
    </section>
  {{/if}}
{{/if}}

<ul class="incomes__list">
  {{# each incomes }}
    <li class="row income__item">
      <div class="col-6">
        <h4 class=".income__name">{{ this.name }}</h4>
      </div>
      <div class="col-6">
        <h4 class=".income__amount">{{ this.amount }}â‚¬</h4>
      </div>
      <div class="col-3">
        <h5 class=".income__date">{{ this.income_date }}</h5>
      </div>
      <div class="col-3">
        <h5 class=".income__type">{{ this.type }}</h5>
      </div>
      <div class="col-2">
        <h5 class=".income__who">{{ this.who }}</h5>
      </div>
      <div class=col-2>
        <h5 class=".income__category">{{ this.category }}</h5>
      </div>
      <div class="col-1">
        <h5 class=".income__euroticket">{{ this.euroticket }}</h5>
      </div>
      <div class="col-1">
        <h5 class=".income__split">{{ this.split }}</h5>
      </div>
      <button class="button edit-income" name="edit">Edit Income</button>
      <button class="button delete-income" name="delete" data-id="{{ this.id }}">Delete Income</button>
    </li>
  {{/each}}
</ul>
