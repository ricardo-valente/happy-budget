{
  "name": "happy-budget",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "dependencies": {
    "express": "^4.16.2",
    "pg": "^7.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.5.0",
    "clean-css": "^4.1.9",
    "concat-cli": "^4.0.0",
    "cp-cli": "^1.1.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "if-env": "^1.0.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.6.1",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2",
    "stylelint": "^8.2.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.0.3",
    "uglifyjs": "^2.4.11"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "scripts": {
    "clean": "rimraf ./{app/css,app/js,public}",
    "mkdir": "mkdirp app/{views,css,js,images/icons,fonts} public/{views,css,js,images/icons,fonts}",
    "run:server": "babel-node app/server.js",
    "browser-sync": "browser-sync start reload --server './app/' --port 5000 --ui-port 5001 --files 'app/**/*.html, app/css/**/*.css, app/**/*.js' --browser 'google chrome'",
    "serve:dev": "run-p run:server browser-sync",
    "serve:prod": "node public/server.js",
    "serve": "run-s serve:prod || run-s serve:dev",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 9' -r app/css/*",
    "concat": "concat-cli -f dev/js/**/*.js -o dev/js/main.js",
    "imagemin": "imagemin app/images/* -o public/images",
    "icons": "svgo -f app/images/icons -o public/images/icons && svg-sprite-generate -d public/images/icons -o public/images/icons/main.svg",
    "lint:scss": "stylelint dev/scss/*.scss --syntax scss || true",
    "lint:js": "eslint app/js || true",
    "compile:server": "babel dev/server.js -o app/server.js",
    "compile:css": "node-sass --output-style nested --indent-type tab --indent-width 2 dev/scss/main.scss app/css/main.css",
    "compile:js": "browserify dev/js/main.js -o app/js/main.js",
    "minify:server": "uglifyjs app/server.js -m -c -o public/server.js",
    "minify:css": "node-sass app/css/main.css --output-style compressed -o public/css/",
    "minify:js": "uglifyjs app/js/main.js -m -c -o public/js/main.min.js",
    "build:folders": "run-s clean mkdir",
    "build:images": "run-s imagemin icons",
    "build:server": "run-s compile:server minify:server",
    "build:html": "cp -r app/index.html public/index.html && cp -r app/views public",
    "build:css": "run-s lint:scss compile:css autoprefixer minify:css",
    "build:js": "run-s lint:js concat compile:js minify:js",
    "build": "run-s build:*",
    "watch:server": "onchange 'dev/server.js' -- run-s build:server",
    "watch:html": "onchange 'app/*.html' -- run-s build:html",
    "watch:scss": "onchange 'dev/scss/main.scss' -- run-s build:css",
    "watch:images": "onchange 'app/images' -- run-s build:images",
    "watch:js": "onchange 'dev/js/main.js' -- run-s build:js",
    "watch": "run-p serve:dev watch:*",
    "start": "run-s build watch",
    "deploy": "git push heroku master && heroku logs --tail",
    "log": "heroku logs --tail"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricardo-valente/happy-budget.git"
  },
  "author": "Ricardo Valente",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ricardo-valente/happy-budget/issues"
  },
  "homepage": "https://github.com/ricardo-valente/happy-budget#readme"
}
